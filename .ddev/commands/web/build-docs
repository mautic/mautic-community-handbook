#!/usr/bin/env bash

## Description: Build Mautic community handbook using the Sphinx HTML builder.
## Usage: build-docs
## Example: ddev build-docs

# Ensure we fail on error
set -e

# Initialize terminal colors/styles
bold=$(tput bold)
green=$(tput setaf 2)
reset=$(tput sgr0)
underline=$(tput smul)

echo "${bold}${green}ğŸ”§ Building Mautic community handbook documentation...${reset}"

# Ensure we're in the right directory
cd /var/www/html/docs
echo

# Run the build
make html

# Success message
echo
echo "${green}âœ… Documentation build completed successfully!${reset}"
echo "${green}ğŸ“ The HTML pages are in: ${bold}/var/www/html/docs/build/html${reset}"

# Friendly access hint
echo "${green}ğŸŒ View the documentation at: ${bold}${underline}https://${DDEV_HOSTNAME}${reset}"
echo
